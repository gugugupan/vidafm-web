@mixin all_background_size_cover( $image_url )
{
	background-image: url( $image_url );
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='#{$image_url}', sizingMethod='scale');
}

@mixin all_background_rgba( $r , $g , $b , $a ) {
	background-color: rgb( $r , $g , $b ) ;
	background-color: rgba( $r , $g , $b , $a ) ;
	*background-color: rgb( $r , $g , $b ) ;
	filter: alpha(opacity = $a * 100); /* required for opacity to work in IE */
}

$font_color : #777777;

#index {
	width: 100%;
	background-color: white;
	position: relative;

	#index_cover {
		width: 100%;
		height: 650px;
		@include all_background_size_cover( "<%= asset_path "index/wood_background.jpg" %>" );
		position: relative;

		#center_phone {
			width: 560px;
			height: 500px;
			position: absolute;
			left: 50%;
			margin-left: -280px;
		}

		#left_content {
			position: absolute;
			width: 340px;
			top: 120px;
			left: 3%;

			#index_logo_title {
				font-size: 36px;
				color: white;
				margin-top: 20px;
			}

			#download_content {
				width: 100%;
				margin-top: 20px;

				#left_part {
					float: left;
				}

				#right_part {
					float: left;
					width: 180px;
					margin-left: 15px;

					.iphone_download {
						width: 162px;
						height: 50px;
						float: left;
						background-image: url(<%= asset_path "index/btn_download_ios.png" %>);

						&:hover {
							background-image: url(<%= asset_path "index/btn_download_ios_hover.png" %>);
						}
					}

					.android_download {
						width: 173px;
						height: 50px;
						float: left;
						margin-top: 10px;
						background-image: url(<%= asset_path "index/btn_download_android.png" %>);

						&:hover {
							background-image: url(<%= asset_path "index/btn_download_android_hover.png" %>);
						}
					}
				}
			}
		}

		#bottom_text {
			position: absolute;
			bottom: 150px;
			width: 100%;
			text-align: center;
			color: white;
			font-size: 24px;

			.line {
				margin-bottom: 3px;
			}
		}

		#index_login_btn {
			right: 5%;
			top: 30px;
			position: absolute;
			width: 100px;
			height: 39px;
			padding-top: 11px;
			background-image: url(<%= asset_path "index/btn_login.png" %>);
			background-repeat: no-repeat;
			color: white;
			font-size: 18px;
			text-align: center;

			&:hover {
				background-image: url(<%= asset_path "index/btn_login_hover.png" %>);
			}
		}

		#hot_stroy_btn {
			position: absolute;
			right: 5%;
			top: 200px;
			width: 163px;
			height: 60px;
			background-image: url(<%= asset_path "index/btn_feature_moment.png" %>);
			background-repeat: no-repeat;

			&:hover {
				background-image: url(<%= asset_path "index/btn_feature_moment_hover.png" %>);
			}
		}
	}

	.intro_block {
		width: 100%;
		padding: 70px 0;
		text-align: center;
		color: $font_color;
	}

	.window_block {
		width: 100%;
		height: 250px;
		position: relative;
		overflow: hidden;
		background-size: cover;
		background-repeat: no-repeat;

		img.background_img {
			position: absolute;
			display: none;
			width: 100%;
			top: 0;
		}

		.grey_cover {
			width: 100%;
			height: 100%;
			position: absolute;
			background-image: url(<%= asset_path "index/grey_point.png" %>);
		}
	}

	#window1 {
		@include all_background_size_cover( "<%= asset_path "index/big_bg_1.jpg" %>" ) ;
	}

	#window2 {
		height: 600px;
		@include all_background_size_cover( "<%= asset_path "index/big_bg_2.jpg" %>" ) ;
	}

	#intro1 {
		font-size: 24px;
	}

	#intro2 {
		font-size: 18px;
	}

	#intro3 {
		font-size: 24px;
		position: relative;
		background-color: white;
		position: absolute;
		bottom: 70px;


		.float_camera {
			position: absolute;
			left: 50%;
			margin-left: -45px;
			top: -45px;
		}
	}

	.scroll_btn {
		background-image: url(<%= asset_path "index/btn_down.png" %>);
		background-repeat: none;
		width: 90px;
		height: 90px;
		position: absolute;
		left: 50%;
		margin-left: -45px;

		&:hover {
			background-image: url(<%= asset_path "index/btn_down_hover.png" %>);
		}
	}

	#android_download {
		position: absolute;
		@include all_background_rgba( 0 , 0 , 0 , 0.8 ) ;
		top: 100px;
		left: 50%;
		margin-left: -120px;
		padding: 40px 20px;
		width: 250px;
		display: none;

		.android_close_btn {
			position: absolute;
			right: 0;
			top: 0;
			width: 29px;
			height: 29px;
		}

		.android_info {
			color: white;
			font-size: 14px;
			margin-top: 10px;
		}

		#download {
			width: 180px;
			height: 50px;
			margin-top: 20px;
			background-image: url(<%= asset_path "index/btn_android_download.png" %>);

			&:hover {
				background-image: url(<%= asset_path "index/btn_android_download_hover.png" %>);
			}
		}

		#download_wandoujia {
			width: 199px;
			height: 50px;
			margin-top: 20px;
			background-image: url(<%= asset_path "index/btn_android_wandoujia.png" %>);

			&:hover {
				background-image: url(<%= asset_path "index/btn_android_wandoujia_hover.png" %>);
			}
		}

		#download_360 {
			width: 179px;
			height: 50px;
			margin-top: 20px;

			background-image: url(<%= asset_path "index/btn_android_360.png" %>);

			&:hover {
				background-image: url(<%= asset_path "index/btn_android_360_hover.png" %>);
			}
		}
	}
}

#footer {
	position: relative;
	width: 100%;
	margin-top: 20px;
	padding-bottom: 20px;
	text-align: center;

	.footer_text {
		margin-bottom: 10px;
		width: 100%;
		display: block;
		float: left;
		clear: both;
	}

	.footer_link {
		float: none;
		display: inline;
	}

	.footer_icon {
		margin: 10px auto;
	}
}