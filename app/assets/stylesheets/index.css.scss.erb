@mixin all_background_size_cover( $image_url )
{
	background-image: url( $image_url );
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='#{$image_url}', sizingMethod='scale');
}

@mixin all_background_rgba( $r , $g , $b , $a ) {
	background-color: rgb( $r , $g , $b ) ;
	background-color: rgba( $r , $g , $b , $a ) ;
	*background-color: rgb( $r , $g , $b ) ;
	filter: alpha(opacity = $a * 100); /* required for opacity to work in IE */
}

$color_pink : #F04A74 ;
$color_green : #00CC8E ;
$color_orange : #FFAF35 ;
$color_dark_orange : #E59D2F ;
$color_grey : #F1F1F1 ;

#index {
	width: 100%;
	background-color: white;
	position: relative;

	#index_cover {
		width: 100%;
		height: 568px;
		background-color: $color_pink ;

		#index_cover_body {
			width: 1000px;
			height: 100%;
			margin: 0 auto;
			position: relative;

			#index_phone {
				background-image: url(<%= asset_path "index/phone_bg.png" %>);
				height: 549px;
				width: 379px;
				position: absolute;
				bottom: 0;
				left: 0;

				#photo_content {
					background-color: $color_green ;
					width: 320px;
					height: 423px;
					position: absolute;
					left: 31px;
					bottom: 0;
					overflow: hidden;

					img {
						width: 100%;
						position: absolute;
						top: 96px;
						display: none;
					}
				}
			}

			#index_content {
				position: absolute;
				top: 140px;
				left: 454px;

				#vida_title {
					height: 35px;
					color: white;
					font-size: 36px;
					font-weight: 800;
					display: block;
				}

				#poitag_content {
					width: 500px;
					height: 130px;
					margin-top: 40px;
					overflow: hidden;
					position: relative;

					img {
						height: 100%;
						position: absolute;
						display: none;
					}
				}

				#des_text {
					height: auto;
					width: 330px;
					font-size: 14px;
					color: white;
					line-height: 20px;
					margin-top: 40px;
				}

				#btn_area {
					width: 240px;
					height: 30px;
					margin-top: 30px;

					a.login_btn {
						width: 118px;
					}

					a.hottest {
						width: 104px;
						margin-left: 17px;
					}

					.index_btn {
						height: 22px;
						padding-top: 8px;
						background-color: white;
						color: $color_pink;
						float: left;
						font-size: 12px;
						font-weight: 800;
						text-align: center;
						border-radius: 5px;

						&:hover {
							text-decoration: underline;
						}
					}
				}
			}
		}
	}

	#index_headerline {
		width: 100%;
		height: 88px;
		background-color: $color_orange;

		#index_headerline_content {
			width: 1000px;
			height: 100%;
			margin: 0 auto;
			position: relative;

			#index_qrcode {
				float: left;
				width: 66px;
				height: 66px;
				margin-top: 11px;
				display: block;
			}

			.index_download {
				float: left;
				width: 220px;
				height: 100%;
				margin-left: 11px;
				text-align: center;

				img {
					height: 100%;
				}

				&:hover {
					background-color: $color_dark_orange;
				}
			}

			.roundbtn {
				float: right;
				width: 60px;
				height: 60px;
				margin-top: 14px;
				margin-right: 33px;
				overflow: hidden;

				img {
					&:hover {
						margin-left: -60px;
					}
				}
			}

			#guanzhu_text {
				font-size: 14px;
				color: white;
				text-align: left;
				margin-top: 30px;
				margin-right: 27px;
				float: right;
			}

			#weichar_qrcode {
				position: absolute;
				width: 230px;
				height: 286px;
				right: 10px;
				top: -270px;
				display: none;
			}
		}
	}

	.index_content {
		width: 100%;
		height: 360px;
		margin: 0 auto;

		.content {
			width: 1000px;
			margin: 0 auto;

			.image_content_left {
				float: left;
				height: 360px;
			}

			.image_content_right {
				float: right;
				height: 360px;
			}

			.font1 {
				font-size: 12px;
				color: #666666;
				padding-top: 110px;
				line-height: 20px;
			}

			.font2 {
				font-size: 18px;
				color: #4D4D4D;
				margin-top: 20px;
				line-height: 28px;
			}
		}
	}

	.index_content_grey {
		background-color: $color_grey ;
	}
}

#footer {
	position: relative;
	width: 100%;
	margin-top: 20px;
	padding-bottom: 20px;
	text-align: center;

	.footer_text {
		margin-bottom: 10px;
		width: 100%;
		display: block;
		float: left;
		clear: both;
	}

	.footer_link {
		float: none;
		display: inline;
	}

	.footer_icon {
		margin: 10px auto;
	}
}