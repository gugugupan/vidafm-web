@mixin all_border_radius( $radius ) {
	border-radius: $radius ;
	-moz-border-radius: $radius ;
	-webkit-border-radius: $radius ;	
}

@mixin all_background_rgba( $r , $g , $b , $a ) {
	background-color: rgb( $r , $g , $b ) ;
	background-color: rgba( $r , $g , $b , $a ) ;
	*background-color: rgb( $r , $g , $b ) ;
	filter: alpha(opacity = $a * 100); /* required for opacity to work in IE */
}

body {
	margin: 0;
	padding: 0;
	font-size: 12px;
	background-size: cover;
	background-position: center;
	overflow: hidden;
}

img {
	border : none;
}

#slideshow_background {
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: -2;

	img {
		width: 100%;
		height: 100%;
	}
}

#slideshow_header {
	width: 100%;
	height: 100px;
	text-align: center;

	#slideshow_header_content {
		position: absolute;
		top: 20px;
		left: 50%;
		margin-left: -160px;
		width: 320px;
		height: 70px;
		z-index: 100;

		#header_left {
			float: left;
			height: 70px;
			width: 70px;
			margin-left: 20px;
		}

		#header_right {
			width: 220px;
			height: 70px;
			float: left;
			margin-left: 10px;

			#header_des {
				color: white;
				font-size: 14px;
				letter-spacing: 1px;
				margin-top: 5px;
				clear: both;
				float: left;
			}

			.header_btn {
				float: left;
				margin-top: 5px;
				margin-right: 10px;
			}
		}
	}
}

#slideshow_index {
	width: 100%; //170px;
	display: block;
	margin:0 auto;
	text-align: center;
	position: relative;

	#play_slideshow_btn_area {
		position: absolute;
		top: 0;
		left: 50%;
		margin-left: -62px;
		width: 124px;


		#play_slideshow_btn {
			margin: 0 20px 60px;
			display: block;

			a {
				width: 100%;
				margin: 10px 0;
			}

			p {
				margin-top: 10px;
				width: 100%;
				color: white;
			}
		}

		.goto_momentshow {
			display: block;
			clear: both;
		}
	}
}

#slideshow {

	.slideshow_window {
		display: none;
		position: relative;
		overflow: hidden;

		.slideshow_img {
			width: 100%;
			height: auto;
		}

		#left_cover {
			height: 100%;
			left: 0;
			top: 0;
		}

		#right_cover {
			height: 100%;
			right: 0;
			top: 0;
		}

		#top_cover {
			width: 100%;
			top: 0;
			left: 0;
		}

		#bottom_cover {
			width: 100%; 
			bottom: 0;
			left: 0;
		}

		.cover {
			display: none;
			position: absolute; 
			z-index: 20;
		}

		.info_window {
			position: absolute;
			bottom: 0;
			left: 0;
			@include all_background_rgba(0,0,0,0.5);
			color: white;
			width: 100%;
			display: none;

			.info_text {
				width: 70%;
				margin: 10px 0 10px 5%;
			}

			.info_rating {
				width: 90%;
				margin: 10px 0 10px 5%;
				font-size: 16px;
			}
		}

		.video-js {
			position: absolute;
			top: 0;
			width: 100%;

			video {
				width: 100%;
				height: 100%;
			}
		}
	}
}

#slideshow_start {
	width: 100%;
	height: 90px;
	text-align: center;
	display: none;
	position: relative;

	.image {
		width: 50px;
		height: 50px;
		position: absolute;
		margin-top: 0;
		margin-left: -25px;
		left: 50%;
		display: none;
		opacity: 0;
	}

	.text {
		font-size: 16px;
		margin: 0;
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		text-align: center;
		color: white;
		display: none;
		opacity: 0;
	}
}

#slideshow_end {
	display: none;
	width: 100%;
	margin:0 auto;
	text-align: center;
	position: relative;

	#end_slideshow_part {
		display: block;
		position: absolute;
		top: 0;
		left: 50%;
		margin-left: -115px;
		width: 215px;
	}

	.goto_momentshow {
		display: block;
		clear: both;
		margin: 50px 52px 0;
	}
}

#slideshow_bar_container {
	width: 320px;
	height: 55px;
	display: block;
	position: absolute;
	bottom: 0;
	left: 50%;
	margin-left: -160px;
	z-index: 101;
}
#slideshow_bar {
	width: 320px;
	height: 55px;
	background-image: url(<%= asset_path "slideshow/slidshow_toolbar.png" %>);
	display: none;

	#bar_btn_1 {
		width: 21px;
		height: 22px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	#bar_btn_2 {
		width: 21px;
		height: 23px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	#bar_btn_3 {
		width: 28px;
		height: 25px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	img {
		width: 100%;
		height: 100%;
	}
}

#slideshow_loading {
	display: none;
	position: absolute;
	left: 50%;
	top: 50%;
	width: 50px;
	height: 50px;
	margin-top: -25px;
	margin-left: -25px;

	img {
		display: none;
	}
}

#slideshow_audio_hint{
	width: 40px;
	height: 58px;
	background-image: url(<%= asset_path "slideshow/icon_micro.png" %>);
	position: absolute;
	top: 0;
	left: 50%;
	margin-left: -20px;
	z-index: 101;
	display: none;
}

.black_cover {
	width: 100%;
	height: 100%;
	@include all_background_rgba( 0 , 0 , 0 , 0.5 ) ;
}

.roundavatar {
	width: 50px;
	height: 50px;
	border: 2px solid white;
	@include all_border_radius( 25px ) ;
	overflow: hidden;
	display: block;
	float: none;

	.roundavatar_file {
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}
}

.roundbutton {
	width: 50px;
	height: 50px;
	display: block;
	overflow: hidden;
	float: left;

	img {
		width: 100%;
		height: 100%;
	}
}

.bcolor {
	background-image:none;
}

#login_with {
	left: 37%;
	top: 100px;
	position: fixed;
}

.clearfix { clear :both ; }
