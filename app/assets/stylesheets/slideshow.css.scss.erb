 *= require screen
 *= require widgets/poitag
 *= require widgets/blackbackground
*/

@mixin all_border_radius( $radius ) {
	border-radius: $radius ;
	-moz-border-radius: $radius ;
	-webkit-border-radius: $radius ;	
}

@mixin all_background_rgba( $r , $g , $b , $a ) {
	background-color: rgb( $r , $g , $b ) ;
	background-color: rgba( $r , $g , $b , $a ) ;
	background: url("/x-opacity.png") repeat scroll 0 0 transparent\9;
}

body {
	margin: 0;
	padding: 0;
	font-size: 12px;
	background-size: cover;
	background-position: center;
	overflow: hidden;
}

img {
	border : none;
}

#slideshow_background {
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: -2;

	img {
		width: 100%;
		height: 100%;
	}
}

#slideshow_footer {
	width: 100%;
	height: 44px;
	text-align: center;
	position: relative;
	z-index: 102;

	.footer_btn {
		position: absolute;
		display: block;
		width: 49.9%;
		height: 100%;
		top:0;
		text-align: center;;

		img {
			height: 100%;
		}
	}

	#left_part {
		left: 0;
		background-color: #7cb7e8;

		&:hover {
			background-color: #6aa0c4;
			cursor: pointer;
		}
	}

	#right_part {
		right: 0;
		background-color: #a4ce74;

		&:hover {
			background-color: #83a05c;
			cursor: pointer;
		}
	}
}

#slideshow_index {
	width: 100%; //170px;
	display: block;
	margin:0 auto;
	text-align: center;
	position: relative;

	#play_slideshow_btn_area {
		position: absolute;
		top: 0;
		left: 50%;
		margin-left: -30px;
		width: 60px;
		z-index: 120;


		#play_slideshow_btn {
			display: block;
			width: 60px;
			height: 60px;
			overflow: hidden;

			img {
				width: 100%;

				&:hover {
					margin-top: -100%;
				}
			}
		}
	}
}

#slideshow {

	.slideshow_window {
		display: none;
		position: relative;
		overflow: hidden;

		.slideshow_img {
			width: 100%;
			height: auto;
		}

		#left_cover {
			height: 100%;
			left: 0;
			top: 0;
		}

		#right_cover {
			height: 100%;
			right: 0;
			top: 0;
		}

		#top_cover {
			width: 100%;
			top: 0;
			left: 0;
		}

		#bottom_cover {
			width: 100%; 
			bottom: 0;
			left: 0;
		}

		.cover {
			display: none;
			position: absolute; 
			z-index: 20;
		}

		.info_window {
			position: absolute;
			bottom: 0;
			left: 0;
			@include all_background_rgba(0,0,0,0.5);
			color: white;
			width: 100%;
			display: none;

			.info_text {
				width: 70%;
				margin: 10px 0 10px 5%;
			}

			.info_rating {
				width: 90%;
				margin: 10px 0 10px 5%;
				font-size: 16px;
			}

			.info_poitag {
				width: 100%;
				padding-left: 5px;
				padding-bottom: 5px;
			}
		}

		.video-js {
			position: absolute;
			top: 0;
			width: 100%;

			video {
				width: 100%;
				height: 100%;
			}
		}
	}
}

#slideshow_start {
	width: 100%;
	height: 90px;
	text-align: center;
	display: none;
	position: relative;

	.image {
		width: 50px;
		height: 50px;
		position: absolute;
		margin-top: 0;
		margin-left: -25px;
		left: 50%;
		display: none;
		opacity: 0;
	}

	.text {
		font-size: 16px;
		margin: 0 auto;
		position: static;
		padding-top: 75px;
		//bottom: 0;
		//left: 0;
		width: 100%;
		text-align: center;
		color: white;
		display: none;
		opacity: 0;
		width: 320px;
	}

	#start_user_name {
		line-height: 25px;
		bottom: -25px;
	}
}

#slideshow_end {
	display: none;
	width: 100%;
	margin:0 auto;
	text-align: center;
	position: relative;

	#end_slideshow_part {
		display: block;
		position: absolute;
		top: 0;
		left: 50%;
		margin-left: -115px;
		width: 215px;
	}
}

#slideshow_bar_container {
	width: 320px;
	height: 55px;
	display: block;
	position: absolute;
	bottom: 0px;
	left: 50%;
	margin-left: -160px;
	z-index: 101;
}
#slideshow_bar {
	width: 320px;
	height: 55px;
	//background-image: url(<%= asset_path "slideshow/slidshow_toolbar.png" %>);
	display: none;

	#bar_btn_1 {
		width: 21px;
		height: 22px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	#bar_btn_2 {
		width: 21px;
		height: 23px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	#bar_btn_3 {
		width: 28px;
		height: 25px;
		display: block;
		margin-top: 15px;
		margin-left: 63px;
	}

	img {
		width: 100%;
		height: 100%;
	}
}

#slideshow_loading {
	display: none;
	position: absolute;
	left: 50%;
	top: 50%;
	width: 50px;
	height: 50px;
	margin-top: -25px;
	margin-left: -25px;

	img {
		display: none;
	}
}

#slideshow_audio_hint{
	width: 40px;
	height: 58px;
	background-image: url(<%= asset_path "slideshow/icon_micro.png" %>);
	position: absolute;
	top: 0;
	left: 50%;
	margin-left: -20px;
	z-index: 101;
	display: none;
}

#slideshow_goto_momentshow {
	width: 77px;
	height: 30px;
	position: absolute;
	right: 0;
	display: block;
	overflow: hidden;

	img {
		width: 100%;

		&:hover {
			margin-top: -30px;
		}
	}
}

#slideshow_ad {
	width: 300px;
	height: 95px;
	bottom: 55px;
	left: 50%;
	margin-left: -150px;
	position: absolute;
	z-index: 105;
	background-color: black;
	border: 5px solid white;
	
	a {
	    float: none;
	}
	
	.close {
	    position: absolute;
	    right: 0px;
	    top: 0px;
	    cursor: pointer;
	}
}

#slideshow_logo {
	width: 281px;
	height: 48px;
	top: 10px;
	left: 10px;
	position: absolute;
	z-index: 21;

	img {
		width: 100%;
	}
}

.black_cover {
	width: 100%;
	height: 100%;
	@include all_background_rgba( 0 , 0 , 0 , 0.5 ) ;
}

.roundavatar {
	width: 50px;
	height: 50px;
	border: 2px solid white;
	@include all_border_radius( 25px ) ;
	overflow: hidden;
	display: block;
	float: none;

	.roundavatar_file {
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}
}

.roundbutton {
	width: 50px;
	height: 50px;
	display: block;
	overflow: hidden;
	float: left;

	img {
		width: 100%;
		height: 100%;
	}
}

.bcolor {
	background-image:none;
}

#login_with {
	left: 37%;
	top: 100px;
	position: fixed;
}

.lock_container {
    left: 50%;
    margin-left: -180px;
    position: absolute;
    text-align: center;
    top: 20%;
    width: 360px;
    
    a.detail_link {
        background: none no-repeat scroll 0 0 rgba(0, 0, 0, 0.5);
        border: 1px solid white;
        border-radius: 20px 20px 20px 20px;
        color: white;
        font-size: 16px;
        padding: 10px 0;
        width: 100%;
    }
}

.clearfix { clear :both ; }
