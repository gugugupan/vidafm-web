#slideshow_footer {
    bottom: 0;
    height: 104px;
    position: absolute;
    background: white;
    
    .footer_btn {
        height: 44px;
        top: auto;
        bottom: 0;
    }
}

.slideshow_info {
    height: 60px;
    width: 100%;
    background: white;
    overflow: hidden;
    
    img.avatar {
        float: left;
        margin-top: 10px;
        margin-left: 10px;
    }
}

.slideshow_info_inner {
    margin-left : 60px;
    text-align: left;
    margin-top: 10px;
}

.story_name {
    color: #dd5f7a;
    font-size: 14px;
}

.user_name {
    color: #808080;
    font-size: 12px;
}

.error-404 .lock_container {
    top: 30%;
}