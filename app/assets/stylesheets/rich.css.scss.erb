/*
 *= require slideshow
*/
#slideshow_footer {
    height: 104px;
    position: relative;
    background: white;
    
    .footer_btn {
        height: 48px;
        top: auto;
        bottom: 0;
    }
}
#slideshow_start {
    position: absolute;
    top: 0;
}
#slideshow {
    position: absolute;
    top: 0;
    
    .slideshow_window {
        .info_window {
            filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#4cffffff', endColorstr='#4cffffff');
        }
    }
}

.tag_block {
    display: inline-block;
    height: auto;
    line-height: 15px;
}

.slideshow_info {
    height: 56px;
    width: 100%;
    background: white;
    overflow: hidden;
    
    img.avatar {
        float: left;
        margin-top: 8px;
        margin-left: 10px;
    }
}

.slideshow_info_inner {
    margin-left : 60px;
    text-align: left;
    margin-top: 8px;
}

.timer {
    top: 8px;
}

.story_name {
    color: #dd5f7a;
    font-size: 14px;
}

.user_name {
    color: #808080;
    font-size: 12px;
}

.error-404 .lock_container {
    top: 30%;
}

#slideshow_audio_hint {
    left: auto;
    right: 10px;
    top: 10px;
    margin-left: 0;
}
