<% if moment['current_page'] != 0 %>
	<%= image_tag "pagination_arrow_left_4x7.png", :class => "pagination_arrow"  %>
	<%= link_to "上一页", moment_path(moment['id'], :page => moment['current_page'].to_i - 1, :format => :js), :remote => true %>
<% end -%> 

<% 0.upto(moment['page_count']) do |page| %>
	<% if page != moment['current_page'] %>
		<%= link_to page + 1, moment_path(moment['id'], :page => page, :format => :js), :remote => true %>
	<% else %>
		<span id='current_page'> <%= moment['current_page'] + 1 %> </span>
	<% end -%>
<% end -%> 

<% if moment['is_last_page'] == 0 %>
	<%= link_to "下一页", moment_path(moment['id'], :page => moment['current_page'].to_i + 1, :format => :js), :remote => true %>
	<%= image_tag "pagination_arrow_right_4x7.png", :class => "pagination_arrow"  %>
<% end -%> 

