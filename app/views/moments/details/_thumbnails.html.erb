<div class="thumbnail_big">
	<%= link_to activity_url(activity['id']), :target => "_blank" do %>
		<%= image_tag activity['photo']['url_m'], :class => "thumbnails" %>
	<% end %>
	<div class="thumbnail_big_like">
		<% if activity['liked'] %>
			<span class="thumbnail_like liked"> </span>
		<% else %>
			<%= link_to "", like_activity_path(activity['id']), :class => "thumbnail_like", "data-login-required" => true, :remote => true, :method => :PUT %>
		<% end %>
		<span class="likes-num"><%= activity['likes_count'] %></span>
	</div>
</div>