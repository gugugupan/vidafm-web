<div class="audio_block" id="audio<%= audio[ 'id' ] %>">
	<%= link_to "javascript:touchAudio( #{ audio .to_json } )" , :class => "audio_button" do %>
		<%= image_tag( "audio/btn_play.png" , :class => "playbtn" ) %> 
		<p class="audio_duration">
			<%= ( audio[ "duration" ] + 0.99 ) .to_i .to_s + '"' %>
		</p>
	<% end -%>

	<%= link_to "javascript:touchAudio( #{ audio .to_json } )" , :class => "audio_button_black" do %>
		<%= image_tag( "audio/playing.gif" , :class => "playingbtn" ) -%> 
		<%= image_tag( "audio/pause.png" , :class => "pausebtn" ) -%>
	<% end -%>
</div>