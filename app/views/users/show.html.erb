<%= content_for :title do %>
  <%= get_name( @cur_user ) %>VIDA（唯达） - 你我的生活轨迹
<% end -%>

<%= content_for :page_specific_asset do %>
<script>
    //LAZY LOAD
	var page_now = 1 ;
	var user_id = <%= params[ :id ] %> ;
    var max_page = 100 ;
    var url_part = "users" ;
    function goLazyLoad()
    {
        if ( page_now < max_page )
        {
            page_now = lazyload( url_part , user_id , page_now , max_page , ".user-story" ) ;
            autoWidthPhoto() ;
        }
    }
</script>
<% end -%>

<div id="user-show">
 	<%= render :partial => "widgets/header" , :locals => { :user => @cur_user } %>
 	<%= render :partial => "widgets/cover" , :locals => { :cover => @user[ :cover_file ] } %>

 	<div id="main-block">
 		<div id="user-info">
 			<div style="float:left;"> <%= avatar_tag @user %> </div>
 			<h1> <%= @user[ :name ] %> </h1>
 		<% if @current_user %>
 			<div id="user-info-button"> 				
 				<%= render :partial => "widgets/filter" , :locals => { :now => params[ :category ] , :data => @user[ :categories ] } %>
                <%= render :partial => "widgets/followdialogbtn" , :locals => { :user => @user } %>
				<%= render :partial => "widgets/followingbtn" , :locals => { :tag => @following_tag , :uid => @user[ :id ] } %>
 			</div>
 		<% end %>
 			<div class="clearfix"> </div>
 		</div>
 	<% if @current_user -%>
 		<div id="following-list">
 			<%= render :partial => "widgets/item", :collection => @moments['data'] , :locals => { :show_type => 1 } %>
            <a id="refresh-link" class="mouse" href=javascript:goLazyLoad()>点击显示更多</a>
 			<div class="clearfix"> </div>
 		</div>
 	</div>
 	<% else -%>
 		<div class="text-info">
 			<p>登录后查看更多内容<p>
 		</div>
 	</div>
  	<%= render :partial => "widgets/login" %>
 	<% end -%>
</div>
