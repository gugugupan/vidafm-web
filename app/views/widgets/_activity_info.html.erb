<div class="side-row-box-top"></div>

<div class="side-row-box" id="activity-info">
	<%= image_tag "moments/details/right_arrow.png", :class => "minor-arrow-r" %>

	<%= avatar_tag activity[:user] %>
	<div class="box-wrapper">
		<div class="box-title">
			<%= link_to user_url activity[:user][:id] do %>
				<%= activity[:user][:name] %>
			<% end %>
			<span class="created-time"> <%= (time_ago_in_words Time.parse(activity[:created_at])) + "前" %> </span>
		</div>
		<div class="box-content">
			<%= activity[:description] %>
		</div>
	</div>
	<div class="clearfix"></div>
</div>

<div class="side-row-box-bottom"></div>
