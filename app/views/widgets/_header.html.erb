<div id="header">
	<div class="content">
		<%= link_to image_tag( "images/logo.png" , :alt => "" , :id => "logo" ) , "/" %>
		<ul>
		<% unless user .nil? || request.url =~ /is_mobile=/i || request.user_agent =~ /(android|ipod|iphone)/i -%>
			<li>
				<%= avatar_tag user %>
				<%= link_to user[ :name ] , "/users/#{ user[ :id ] }" , :id => "me" , :class => "link" %>
			</li>
			<li>
				<%= link_to "关注动态" , "/home" , :id => "activity" , :class => "link" %>
			</li>
		<% end -%>
			<li>
				<%= link_to "发现" , "/discover/index" , :id => "discover" , :class => "link" %>
			</li>
		</ul>

	<% unless user .nil? %>
		<div id="header_btn">
			<!-- message btn  -->
		<% unless request.url =~ /is_mobile=/i || request.user_agent =~ /(android|ipod|iphone)/i -%>
			<%= link_to "javascript:callNotificationBox()" , :class => "btn_red btn_small" , :style => "padding-left:30px;" , :id => "notification_btn" do %>
				<%= image_tag "icon/icon_message.png" , :alt => "" %>
				<span>消息 <%= @cur_user[ :notification_count ] unless @cur_user[ :notification_count ] == 0 %></span>
			<% end -%>
		<% end -%>
			<!-- logout btn -->
			<%= link_to "/auth/logout" , :class => "btn_red btn_small" , :style => "padding-left:25px;" do %>
				<%= image_tag "icon/icon_logout.png" , :alt => "" %>
				登出
			<% end -%>
		</div>
	<% else -%>
		<div id="header_btn">
			<!-- login btn -->
			<a href="#" id="login-button" class="btn_red btn_small login_btn" style="padding-left:25px">
				<%= image_tag "icon/icon_logout.png" , :alt => "" %>
				登入
			</a>
		</div>
	<% end -%>
	</div>
</div>
<div style="width:100%; height:58px;"> </div>