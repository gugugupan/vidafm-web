<div class="side-row-box" id="thumbnails">
	<div class="box-title"> <%= moment['data']['items_count'] %> </div>
	<div class="box-content">
		<% moment["data"]['items'].each do |e| %>
			<% e.stringify_keys! %>
			<%= link_to activity_url(e['id']) do  %>
				<%= image_tag e["photo"]['url_s'], :class => "box-thumbnails" %>
			<% end %>
		<% end %>


		<% if moment['page_count'].to_i > 1 %>
		<div class="pagination">
			<%= vida_pagination moment_url(moment['data']['id']), moment['page_count'], moment['current_page'] , {:remote => true, :page_size => 4, :page_padding => 2.5} %>		
		</div>
		<% end %>
		<div class="clearfix"></div>
	</div>
</div>


<script type="text/javascript">
	$(".prev_page, .page_number, .next_page").click(function () {
		var mask = $('<div class="spin-mask" style="position:absolute; width: 100%; height: 100%; background-color: white; opacity: 0.8;"> </div>');
		$(this).parents(".box-content").css('position', 'relative').prepend(mask);
		var opts = {
		  lines: 10, // The number of lines to draw
		  length: 9, // The length of each line
		  width: 4, // The line thickness
		  radius: 6, // The radius of the inner circle
		  color: '#333', // #rgb or #rrggbb
		  speed: 1, // Rounds per second
		  trail: 54, // Afterglow percentage
		  shadow: false, // Whether to render a shadow
		  hwaccel: true, // Whether to use hardware acceleration
		  className: 'spinner', // The CSS class to assign to the spinner
		  zIndex: 2e9, // The z-index (defaults to 2000000000)
		  top: 'auto', // Top position relative to parent in px
		  left: 'auto' // Left position relative to parent in px
		};
		mask.spin(opts);
	})
</script>