<div class="comment_layout">
	<%=image_tag comment["user"]["avatar_file"], "data-user-id" => comment["user"]["id"], :class=>"user_photo user" %>
	<div class="content_layout">
		<div class="arrow_bar">
		  <div class="arrow_icon"></div>
		</div>
		<div class="massage_bar">
		  <div class="user_massage">
		    <div class="user_name" "data-user-id"=<%= comment["user"]["id"] %>><%= comment["user"]['name'] %></div>
		    <div class="content_date"><%= Date.parse(comment['created_at']).strftime("%Y.%m.%d")%></div>
		  </div>
		  <div class="content"><%= comment["content"] %></div>
		  <div class="reply"></div>
		</div>
	</div>
</div>