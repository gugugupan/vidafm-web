                <li style="line-height: 40px;">
                    <%= link_to raw("<i class=\"icon-info-sign\"></i>&nbsp;&nbsp; 比赛规则"),
                    {:controller => "weiboactive",:action => "rule"},
                    :class => "nav-btn" %>
