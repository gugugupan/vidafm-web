<!--my profile -->
<header class="header">

    <div class="row-fluid text-center myprofile-container">
        <div class="span12">
            <%= avatar_tag user, {:nolink => true, :class => "user-avatar"} %>
            <div class="user-name">
                <%= user[ :name ] %>
            </div>
        </div>
    </div>

    <div class="row-fluid text-center">
        <div class="span6">
            <span class="btn-yellow btn-large" href="/"> 原创排名 No.200 </span>
        </div>
        <div class="span6">
            <span class="btn-cyanogen btn-large" href="/"> 分享排名 No.200 </span>
        </div>
    </div>
    <hr>
    <div class="row-fluid text-center">
        <div class="span6">
            <div class="integral">
                0
            </div>
            <p class="p22-5" style="margin-bottom: 12px;">
                我的原创得分
            </p>
            <%= link_to "如何获得原创得分",
            {:controller => "weiboactive",:action => "rule_oa"},
            :class => "btn-yellow btn-large" %>
        </div>
        <div class="span6">
            <div class="integral">
                0
            </div>
            <p class="p22-5" style="margin-bottom: 12px;">
                我的分享得分
            </p>
            <%= link_to "如何获得分享得分",
            {:controller => "weiboactive",:action => "rule_share"},
            :class => "btn-cyanogen btn-large" %>
        </div>
    </div>
</header>
